<div class="coment_body row " id="{comment-id}">

		<div class="mass">{mass-action}</div>
	<div class="col-md-12  com_content">

		

		<span class="col-md-1 col-xs-3 com_info">
			<span class=" avatar cover" style="background-image: url({foto});">	</span>
		</span>


		<span class="col-md-11 col-xs-7 com_text">
				[profile]<div class="col-md-12 com_user"><b class="name">{author}</b><span class="grey date">{date}</span></div>[/profile]		{comment}</span>


	</div>


	<div class="com_tools">
		[not-group=5]
		
		<span class="edit_btn">
			[com-edit]
			Редактировать
			[/com-edit]
		</span>
		[/not-group]
		<div class="com_tools_links grey ">
			[fast]<span>Цитировать</span>[/fast]
			[treecomments]
			[reply]<span>Ответить</span>[/reply]
			[/treecomments]
			[complaint]<span>Жалоба</span>[/complaint]
			[com-del]<span>Удалить</span>[/com-del]
		</div>
	</div>

</div>